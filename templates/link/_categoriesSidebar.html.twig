<div class="p-3 mb-5 component-light">
	<h5 class="text-center">
		{% trans %}Categories{% endtrans %}
	</h5>
	<ul class="nav flex-column mb4">
		<li class="nav-item">
			<a class="nav-link {{ not currentCategory|default ? 'selected' }}"
        href="{{ path('app_link_index', {'sort': sort, 'sortDirection': sortDirection }) }}"
      >
				{% trans %}All Links{% endtrans %}
			</a>
		</li>
		{% for category in categories %}
			<li class="nav-item">
				<a class="nav-link {{ currentCategory|default is same as category ? 'selected' }}"
          href="{{ path('app_link_index', {'sort': sort, 'sortDirection': sortDirection, 'catId':  category.id}) }}"
        >
					{{ category.name }}
				</a>
			</li>
		{% endfor %}
	</ul>
</div>
{% if currentCategory == '' %}
  {{ include('_common/_search.html.twig', {frame: 'link-admin-list' }) }}
{% endif %}
