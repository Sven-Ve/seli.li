{% extends 'base.html.twig' %}

{% block title %}Link{% endblock %}

{% block body %}
  <h1>Link</h1>

  <table class="table">
    <tbody>
    <tr>
      <th>Name</th>
      <td>{{ link.name }}</td>
    </tr>
    <tr>
      <th>URL</th>
      <td>{{ link.url }}</td>
    </tr>
    <tr>
      <th>Favorite</th>
      <td>{{ link.isFavorite ? 'Yes' : 'No' }}</td>
    </tr>
    </tbody>
  </table>

  <a href="{{ path('app_link_edit', {'id': link.id}) }}" class="btn btn-primary float-start">
    {% trans %}Edit{% endtrans %}
  </a>
  <span class="float-start">&nbsp;&nbsp;</span>
  <a href="{{ path('app_link_index') }}" class="btn btn-secondary float-start">
    {% trans %}Back to list{% endtrans %}
  </a>

{% endblock %}
